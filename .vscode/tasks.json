{
    // This tasks.json file is configured for Visual Studio Code using g++.
    // It now includes the Vulkan SDK by adding include and library paths,
    // and links against the Vulkan library (vulkan-1).
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                // Add the Vulkan include directory.
                "-IC:\\VulkanSDK\\1.4.309.0\\Include",
                // Add the Vulkan library directory.
                "-LC:\\VulkanSDK\\1.4.309.0\\Lib",
                // Link against the Vulkan library.
                "-lvulkan-1",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger. Modified to include Vulkan SDK."
        }
    ],
    "version": "2.0.0"
}